{
  "name": "moodboard-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev:web": "next dev --turbopack",
    "dev:backend": "bash python-backend/start_backend.sh",
    "dev": "concurrently -n web,ai -c green,magenta \"npm:dev:web\" \"npm:dev:backend\"",
    "build": "next build",
    "build:all": "npm run build",
    "start:web": "next start",
    "start:backend": "bash python-backend/start_backend.sh",
    "start": "concurrently -n web,ai -c green,magenta \"npm:start:web\" \"npm:start:backend\"",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm:dev:backend\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:simple": "electron . --no-python",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac-dmg": "npm run build && electron-builder --mac --publish=never",
    "dist": "npm run build && electron-builder",
    "production": "npm run build:all && npm run start",
    "lint": "next lint"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "lucide-react": "^0.537.0",
    "next": "15.4.6",
    "node-cache": "^5.1.2",
    "p-queue": "^8.1.0",
    "playwright": "^1.54.2",
    "pptxgenjs": "^4.0.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "sharp": "^0.34.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.moodboard.app",
    "productName": "Mood Board Creator",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".next/**/*",
      "electron/**/*",
      "python-backend/**/*",
      "!python-backend/venv",
      "public/**/*",
      "node_modules/**/*",
      "!node_modules/@img/**",
      "!node_modules/sharp/**",
      "package.json",
      "next.config.ts"
    ],
    "extraResources": [
      {
        "from": "python-backend",
        "to": "python-backend",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!__pycache__/**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "electron/assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
